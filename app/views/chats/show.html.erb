タイトル : <%= @chat.title %><br>
質問内容 : <%= @chat.content %><br>
投稿者名 : <%= @chat.name %>


<%= form_with(model: [@chat, @answer], local: true) do |form| %><br>
    <%= form.text_area :content, placeholder: "回答する" %><br>
    <%= form.text_field :name, placeholder: "投稿者名" %><br>
    <%= form.submit "POST" %><br>
<% end %>


<% @answers.each do |answer|%>
    回答 : <%= answer.content %><br>
    投稿者名 : <%= answer.name %><br>
<% end %>